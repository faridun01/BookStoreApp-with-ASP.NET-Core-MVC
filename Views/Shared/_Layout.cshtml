<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStoreApp</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

    <!-- Site-Specific CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStoreApp.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-darkslategray border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">BookStoreApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Books" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Books" asp-action="Index">Books</a>
                        </li>
                    </ul>
                    <!-- Login/Logout Section -->
                    <ul class="navbar-nav">
                        @using Microsoft.AspNetCore.Identity
                        @inject SignInManager<IdentityUser> SignInManager
                        @inject UserManager<IdentityUser> UserManager

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index">
                                    Hello @User.Identity?.Name!
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="mt-auto border-top bg-darkslategray text-white py-4">
        <div class="container">
            <div class="row">
                <!-- Section 1: Copyright Information -->
                <div class="col-md-4 mb-3">
                    <h5>2025 - Kitobhoi Rahimov</h5>
                    <h6 class="fst-italic"><br />Open a book, unlock a world of possibilities.<br /><br />Every page brings you closer to a better you.</h6>
                </div>

                <!-- Section 2: Messenger Icons -->
                <div class="col-md-4 connect-with-us text-center mb-3">
                    <h6>Connect with Us</h6>
                    <a href="https://facebook.com" target="_blank" class="custom-link" style="color: #0084FF;">
                        <i class="fab fa-facebook-messenger custom-icon"></i> Facebook
                    </a>
                    <a href="https://web.whatsapp.com" target="_blank" class="custom-link" style="color: #25D366;">
                        <i class="fab fa-whatsapp custom-icon"></i> Whatsapp
                    </a>
                    <a href="https://telegram.org" target="_blank" class="custom-link" style="color: #0088CC;">
                        <i class="fab fa-telegram-plane custom-icon"></i> Telegram
                    </a>
                </div>

                <!-- Section 3: Store Information -->
                <div class="col-md-4 text-start ps-5 mb-3">
                    <h6>Our Store</h6>
                    <p>123 Book Street, Reading City</p>
                    <p>Email: <a href="mailto:support@bookstoreapp.com" class="text-white">support@bookstoreapp.com</a></p>
                    <p>Phone: <a href="tel:+1234567890" class="text-white">+1-234-567-890</a></p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
