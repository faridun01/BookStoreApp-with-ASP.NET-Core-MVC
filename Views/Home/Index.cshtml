@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Carousel -->
            <div id="carouselExample" class="carousel slide shadow custom-carousel" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item">
                        <img src="~/img/carousel/jilbert-ebrahimi-HAwA1N2gjo8-unsplash.jpg" class="d-block w-100" alt="Second Slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Read</h5>
                            <p>Unlock the doors to endless knowledge and imagination. Let each page inspire, educate, and transport you to a world beyond the ordinary.</p>

                        </div>
                    </div>
                    <div class="carousel-item active">
                        <img src="~/img/carousel/nguyen-thu-hoai-9CILN1ybspA-unsplash.jpg" class="d-block w-100" alt="First Slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Enjoy the Moment</h5>
                            <p>Savor the beauty of now, embrace every joy, and create memories that last a lifetime. Life's best moments are meant to be cherished.</p>

                        </div>
                    </div>                    
                    <div class="carousel-item">
                        <img src="~/img/carousel/antenna-cw-cj_nFa14-unsplash.jpg" class="d-block w-100" alt="Third Slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Discuss</h5>
                            <p>Share your thoughts, spark meaningful conversations, and explore new perspectives. Great ideas are born from open dialogue.</p>

                        </div>
                    </div>
                </div>
                <!-- Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <!-- Idea 1: Personalized Book Recommendations -->
        <div class="col-4 text-center p-4 shadow-sm">
            <h3>Personalized Recommendations</h3>
            <p>Discover books tailored to your taste using AI-driven recommendations. Explore new genres and authors based on your reading history and interests.</p>
            <a href="#" class="btn btn-primary">Learn More</a>
        </div>

        <!-- Idea 2: Interactive and Gamified Learning -->
        <div class="col-4 text-center p-4 shadow-sm">
            <h3>Interactive Learning</h3>
            <p>Make learning fun with interactive books that include quizzes, puzzles, and games. Engage deeply with content and enhance retention.</p>
            <a href="#" class="btn btn-primary">Explore Now</a>
        </div>

        <!-- Idea 3: Community-Driven Book Insights -->
        <div class="col-4 text-center p-4 shadow-sm">
            <h3>Community Insights</h3>
            <p>Join a platform where readers collaborate to share insights, create summaries, and discuss books in real-time.</p>
            <a href="#" class="btn btn-primary">Join the Community</a>
        </div>
    </div>
</div>
