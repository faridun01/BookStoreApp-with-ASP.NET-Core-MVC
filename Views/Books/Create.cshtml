@model BookStoreApp.Models.Book

@{
    ViewData["Title"] = "Create Book";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-success text-white rounded-top-4">
                    <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Create New Book</h4>
                </div>

                <div class="card-body px-5 py-4">
                    <!-- Validation Summary -->
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <form asp-action="Create" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">
                                <i class="fas fa-heading me-1 text-success"></i>Title
                            </label>
                            <input asp-for="Title" class="form-control rounded-3" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Author" class="form-label fw-semibold">
                                <i class="fas fa-user-edit me-1 text-success"></i>Author
                            </label>
                            <input asp-for="Author" class="form-control rounded-3" />
                            <span asp-validation-for="Author" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">
                                <i class="fas fa-align-left me-1 text-success"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control rounded-3" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label for="uploadedFile" class="form-label fw-semibold">
                                <i class="fas fa-upload me-1 text-success"></i>Upload File
                            </label>
                            <input type="file" name="uploadedFile" class="form-control rounded-3" />
                            <small class="text-muted fst-italic">Supported: .pdf, .doc, .docx, .txt</small>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-check-circle me-1"></i> Create
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
