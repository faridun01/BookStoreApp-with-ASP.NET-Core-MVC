@model IEnumerable<BookStoreApp.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Books List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create a New Book</a>
</p>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>            
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.BookId">Edit</a> 
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.BookId">Details</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.BookId">Delete</a> 
                <a asp-action="Download" class="btn btn-primary" asp-route-id="@item.BookId">Download</a>
            </td>
        </tr>
}
    </tbody>
</table>
