@model BookStoreApp.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-danger rounded-4">
                <div class="card-header bg-danger text-white rounded-top-4">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Confirm Delete
                    </h4>
                </div>

                <div class="card-body px-5 py-4">
                    <p class="fs-5 text-center text-danger mb-4">
                        Are you sure you want to permanently delete this book?
                    </p>

                    <dl class="row fs-5">
                        <dt class="col-sm-3 text-muted"><i class="fas fa-heading me-1 text-danger"></i>Title</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-3 text-muted"><i class="fas fa-user me-1 text-danger"></i>Author</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Author)</dd>

                        <dt class="col-sm-3 text-muted"><i class="fas fa-align-left me-1 text-danger"></i>Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                    </dl>
                </div>

                <div class="card-footer bg-light text-end rounded-bottom-4">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="BookId" />
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="fas fa-trash-alt me-1"></i> Delete
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary ms-2 px-4">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
