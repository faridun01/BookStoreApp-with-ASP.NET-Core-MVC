@model BookStoreApp.Helpers.AboutViewModel

@{
    ViewData["Title"] = "About";
}

<div class="bg-light text-dark min-vh-100 py-5">
    <div class="container-fluid">
        <div class="row g-4 justify-content-center">

            <!-- Sidebar Search - Flush to Left -->
            <div class="col-lg-3 col-md-4" data-aos="fade-right">
                <div class="card border-0 shadow rounded-4 h-100">
                    <div class="card-header bg-primary text-white rounded-top-4">
                        <h5 class="mb-0"><i class="fas fa-search me-2"></i>Search Books</h5>
                    </div>
                    <div class="card-body p-3" style="max-height: 600px; overflow-y: auto;">
                        <div class="input-group mb-3">
                            <span class="input-group-text bg-white"><i class="fas fa-book-open text-muted"></i></span>
                            <input type="text" id="bookSearch" class="form-control" placeholder="Type book title..." />
                        </div>
                        <ul id="bookList" class="list-group list-group-flush">
                            @foreach (var book in Model.Books)
                            {
                                <li class="list-group-item list-hover">
                                    <a href="@Url.Action("Details", "Books", new { id = book.BookId })"
                                       class="text-decoration-none text-dark d-block">@book.Title</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-lg-9 col-md-8">
                <!-- Welcome -->
                <div class="text-center mb-5" data-aos="fade-down">
                    <h1 class="display-4 fw-bold text-primary">@ViewData["Title"]</h1>
                    <p class="lead">Welcome to <span class="text-primary fw-semibold">BookStoreApp</span>, your gateway to endless knowledge and stories.</p>
                </div>

                <!-- Mission -->
                <div class="p-4 bg-white rounded-4 shadow-sm mb-5 text-center" data-aos="zoom-in">
                    <h3 class="text-success"><i class="fas fa-bullseye me-2"></i>Our Mission</h3>
                    <p class="mb-0 fs-5">
                        We provide a rich collection of books with free access and seamless downloads.
                        Join our community where learning is celebrated and knowledge is shared!
                    </p>
                </div>

                <!-- Why Choose Us -->
                <div class="mb-5" data-aos="fade-left">
                    <h3 class="text-info mb-3"><i class="fas fa-star me-2"></i>Why Choose Us?</h3>
                    <ul class="list-group shadow-sm rounded-4">
                        <li class="list-group-item"><i class="fas fa-check-circle text-success me-2"></i>Wide variety of books across genres</li>
                        <li class="list-group-item"><i class="fas fa-check-circle text-success me-2"></i>User-friendly and responsive interface</li>
                        <li class="list-group-item"><i class="fas fa-check-circle text-success me-2"></i>Easy search and instant downloads</li>
                        <li class="list-group-item"><i class="fas fa-check-circle text-success me-2"></i>Regularly updated with trending titles</li>
                    </ul>
                </div>

                <!-- Explore -->
                <div class="text-center" data-aos="fade-up">
                    <h4 class="text-secondary mb-3">Ready to Explore?</h4>
                    <a href="/Books/Index" class="btn btn-lg btn-success px-4 py-2 shadow-sm rounded-pill">
                        <i class="fas fa-book-reader me-2"></i>Browse Our Library
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .list-hover:hover {
        background-color: #f1f1f1;
        transition: background-color 0.3s ease;
    }

    ::-webkit-scrollbar {
        width: 6px;
    }

    ::-webkit-scrollbar-thumb {
        background-color: #ccc;
        border-radius: 10px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background-color: #999;
        }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("bookSearch");
        const bookItems = document.querySelectorAll("#bookList li");

        searchInput.addEventListener("input", function () {
            const query = searchInput.value.toLowerCase();
            bookItems.forEach(item => {
                const text = item.textContent.toLowerCase();
                item.style.display = text.includes(query) ? "" : "none";
            });
        });
    });
</script>
